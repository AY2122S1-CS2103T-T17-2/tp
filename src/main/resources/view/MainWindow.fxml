<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Screen?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<fx:root type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
         title="CLITutors" minWidth="450" minHeight="600" onCloseRequest="#handleExit">
  <fx:define>
    <Screen fx:factory="getPrimary" fx:id="screen" />
  </fx:define>
  <icons>
    <Image url="@/images/address_book_32.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@Fonts.css"/>
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox>
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>

        <VBox prefHeight="${screen.visualBounds.height}">
          <HBox prefWidth="${screen.visualBounds.width}">

            <!-- Tutor List -->
            <VBox fx:id="tutorList" styleClass="pane-with-border" prefWidth="${screen.visualBounds.width*0.33}"
                  prefHeight="${screen.visualBounds.height}" VBox.vgrow="ALWAYS">
              <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
              </padding>
              <TextField id="tutorHeader" text="   Tutors" editable="false" styleClass="list-header" focusTraversable="false" />
              <StackPane fx:id="tutorListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
            </VBox>

            <!-- Student List -->
            <VBox fx:id="studentList" styleClass="pane-with-border" prefWidth="${screen.visualBounds.width*0.33}"
                  prefHeight="${screen.visualBounds.height}" VBox.vgrow="ALWAYS">
              <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
              </padding>
              <TextField id="studentHeader" text="   Students" editable="false" styleClass="list-header" focusTraversable="false" />
              <StackPane fx:id="studentListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
            </VBox>

            <!-- Match List -->
            <VBox fx:id="matchList" styleClass="pane-with-border" prefWidth="${screen.visualBounds.width*0.34}"
                  prefHeight="${screen.visualBounds.height}" VBox.vgrow="ALWAYS">
              <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
              </padding>
              <TextField id="matchHeader" text="   Match List" editable="false" styleClass="list-header" focusTraversable="false" />
              <StackPane fx:id="matchListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
            </VBox>
          </HBox>

          <StackPane VBox.vgrow="NEVER" fx:id="resultDisplayPlaceholder" styleClass="pane-with-border"
                     minHeight="100" prefHeight="100" maxHeight="100">
            <padding>
              <Insets top="5" right="10" bottom="5" left="5" />
            </padding>
          </StackPane>
        </VBox>

        <StackPane VBox.vgrow="NEVER" fx:id="commandBoxPlaceholder" styleClass="pane-with-border">
          <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
          </padding>
        </StackPane>
      </VBox>
    </Scene>
  </scene>
</fx:root>
